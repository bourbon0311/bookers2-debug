<%# "id: #{@user.id}" %>
<br>
<p><%= "フォロー数: #{@user.follower.count}" %></p>
<p><%= "フォロワー数: #{@user.followed.count}" %></p>
<% unless @user == current_user %>
  	<% if current_user.following?(@user) %>
  	<a href="#comments"><%= @book.book_comments.count %></a>
      	<%= link_to 'フォロー外す', unfollow_path(@user.id), method: :POST, class: "btn btn-primary" %>
      	<% else %>
      	<%= link_to 'フォローする', follow_path(@user.id), method: :POST, class: "btn btn-success" %>
      	<% end %>
     <% end %>

<%# unless current_user == user %>
	<%# if current_user.following?(user) %>
    	<%#= form_for(current_user.relationships.find_by(follow_id: user.id), html: { method: :delete }) do |f| %>
      		<%#= hidden_field_tag :follow_id, user.id %>
      		<%#= f.submit 'フォロー外す', class: 'btn btn-danger btn-block' %>
    	<%# end %>
  <%# else %>
    	<%#= form_for(current_user.relationships.build) do |f| %>
      		<%#= hidden_field_tag :follow_id, user.id %>
      		<%#= f.submit 'フォローする', class: 'btn btn-primary btn-block' %>
    	<%# end %>
  	<%# end %>
<%# end %>